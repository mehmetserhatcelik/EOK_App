<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="43dp"
        android:onClick="selectImage"
        android:src="@android:drawable/ic_menu_gallery"
        map:civ_border_color="@android:color/darker_gray"
        map:civ_border_width="2dp"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintDimensionRatio="H,1:1"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintWidth_percent="0.8" />


        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/butdeneme"
            android:onClick="addEvent"
            android:text="Add Event"
            android:textColor="@color/white"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintDimensionRatio="H,2.5:1"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintWidth_percent="0.30" />

        <EditText
            android:id="@+id/shortDescription"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/input"
            android:ems="10"
            android:hint="Short Description"
            android:inputType="textPersonName"
            android:padding="@dimen/padding"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            map:layout_constraintBottom_toTopOf="@+id/button"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintDimensionRatio="H,6:1"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/title"
            map:layout_constraintVertical_bias="0.0"
            map:layout_constraintWidth_percent="0.8" />


        <EditText
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/input"
            android:ems="10"
            android:hint="Title"
            android:inputType="textPersonName"
            android:minHeight="50dp"
            android:padding="@dimen/padding"
            android:textSize="20sp"
            map:layout_constraintBottom_toTopOf="@+id/button"
            map:layout_constraintDimensionRatio="H,6:1"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/iconImageView"
            map:layout_constraintVertical_bias="0.051"
            map:layout_constraintWidth_percent="0.8" />

        <EditText
            android:id="@+id/longDescription"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/input"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:gravity="top|start"
            android:hint="Long Description"
            android:inputType="textMultiLine"
            android:maxLines="15"
            android:minLines="1"
            android:padding="@dimen/padding"
            android:scrollbars="vertical"
            android:textSize="20sp"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintDimensionRatio="H,1:1.20"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/shortDescription"
            map:layout_constraintWidth_percent="0.8" />

        <EditText
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_marginTop="20dp"
            map:layout_constraintDimensionRatio="H,6:1"
            android:padding="@dimen/padding"
            map:layout_constraintWidth_percent="0.8"
            android:layout_height="0dp"
            android:background="@drawable/input"
            android:ems="10"
            android:hint="Date"
            android:inputType="textPersonName"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/longDescription" />

        <EditText
            android:id="@+id/place"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/input"
            android:ems="10"
            android:hint="Place"
            android:layout_marginTop="20dp"
            android:inputType="textPersonName"
            android:padding="@dimen/padding"
            android:textSize="20sp"
            map:layout_constraintVertical_bias="0"
            map:layout_constraintBottom_toTopOf="@+id/button"
            map:layout_constraintDimensionRatio="H,6:1"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintHorizontal_bias="0.5"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/date"
            map:layout_constraintWidth_percent="0.8" />

        <EditText
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input"
            android:ems="10"
            android:hint="Time"
            android:inputType="time"
            android:padding="@dimen/padding"
            android:textSize="20sp"
            android:layout_marginBottom="40dp"
            map:layout_constraintBottom_toTopOf="@+id/button"
            map:layout_constraintDimensionRatio="H,6:1"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toBottomOf="@+id/place"
            map:layout_constraintWidth_percent="0.8" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>



