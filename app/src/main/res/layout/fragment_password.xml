<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profilesettings.PasswordFragment">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="@drawable/back"
        android:onClick="back"

        app:layout_constraintBottom_toTopOf="@+id/frameLayout4"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.401"
        app:layout_constraintWidth_percent="0.08" />

    <FrameLayout
        android:id="@+id/frameLayout4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,3:3.5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintWidth_percent="0.8"
        android:background="@drawable/butdeneme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:autoSizeMaxTextSize="45sp"
                android:autoSizeMinTextSize="15sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:text="Change Password"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:layout_constraintDimensionRatio="H,10:3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.4" />

            <EditText
                android:id="@+id/oldPasswordText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,230:55"
                app:layout_constraintVertical_bias="0.162"
                app:layout_constraintWidth_percent="0.7"

                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/customlock_icon"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Enter Old Password"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:password="true"
                android:textColorHint="@android:color/darker_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <EditText
                android:id="@+id/newPasswordText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,230:55"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/customopenlock_icon"
                android:drawablePadding="10dp"
                android:ems="10"
                app:layout_constraintVertical_bias="0.495"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintWidth_percent="0.7"
                android:hint="Enter New Password"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:password="true"
                android:textColorHint="@android:color/darker_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <EditText
                android:id="@+id/againPasswordText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,230:55"
                app:layout_constraintVertical_bias="0.843"
                app:layout_constraintWidth_percent="0.7"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/customopenlock_icon"
                android:drawablePadding="10dp"

                android:ems="10"
                android:hint="Enter New Again"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:password="true"
                android:textColorHint="@android:color/darker_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>


    <Button
        android:id="@+id/changePasswordBotton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeMaxTextSize="25sp"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeStepGranularity="2sp"
        app:layout_constraintVertical_bias="0.893"

        android:autoSizeTextType="uniform"
        android:onClick="changePassword"
        android:text="Change"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,4:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.4" />
</androidx.constraintlayout.widget.ConstraintLayout>